---
import Terminal from "./ui/Terminal.astro";
---

<section class="section relative overflow-hidden">
  <!-- Gradient background -->
  <div
    class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,oklch(0.77_0.16_70_/_0.15),transparent)]"
  >
  </div>

  <div class="container">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Logo -->
      <div class="slide-up mb-6 flex justify-center opacity-0">
        <svg
          class="h-16 w-16 md:h-20 md:w-20"
          viewBox="0 0 32 32"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <defs>
            <clipPath id="hero-left">
              <rect x="0" y="0" width="15" height="32"></rect>
            </clipPath>
            <clipPath id="hero-right">
              <rect x="17" y="0" width="15" height="32"></rect>
            </clipPath>
          </defs>
          <rect
            x="2"
            y="2"
            width="28"
            height="28"
            rx="6"
            fill="currentColor"
            class="text-primary"
            clip-path="url(#hero-left)"></rect>
          <rect
            x="2"
            y="2"
            width="28"
            height="28"
            rx="6"
            fill="currentColor"
            class="text-primary"
            clip-path="url(#hero-right)"></rect>
          <circle
            cx="16"
            cy="16"
            r="7"
            fill="currentColor"
            class="text-background"></circle>
        </svg>
      </div>

      <!-- Badge -->
      <div
        class="slide-up delay-100 mb-8 inline-flex items-center gap-2 opacity-0"
      >
        <span
          class="rounded-full border border-border bg-muted px-3 py-1 text-sm text-muted-foreground"
        >
          Open Source
        </span>
      </div>

      <!-- Headline -->
      <h1
        class="slide-up delay-200 mb-6 text-4xl font-bold tracking-tight opacity-0 md:text-6xl lg:text-7xl"
      >
        Self-hosted Flutter CI/CD
        <br />
        <span class="gradient-text">for Mac</span>
      </h1>

      <!-- Subtext -->
      <p
        class="slide-up delay-300 mx-auto mb-10 max-w-2xl text-lg text-muted-foreground opacity-0 md:text-xl"
      >
        An open-source build server that runs on your Mac hardware. Receive
        webhooks from GitHub/GitLab, build Flutter apps, manage signing,
        distribute artifacts.
      </p>

      <!-- CTA -->
      <div class="slide-up delay-400 mb-16 flex justify-center gap-4 opacity-0">
        <a
          href="https://github.com/devaryakjha/oore.build"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg bg-foreground px-6 py-3 font-medium text-background transition-opacity hover:opacity-90"
        >
          <svg
            class="h-5 w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
          Star on GitHub
        </a>
        <a
          href="#quickstart"
          class="inline-flex items-center gap-2 rounded-lg border border-border px-6 py-3 font-medium transition-colors hover:bg-muted"
        >
          Get Started
        </a>
      </div>

      <!-- Terminal preview -->
      <div class="slide-up opacity-0" style="animation-delay: 500ms;">
        <Terminal title="Quick Start">
          <code
            ><span class="text-muted-foreground"># Install and run</span>
            cargo build --release
            <span class="text-primary">sudo</span> ./target/release/oored install
            <span class="text-primary">sudo</span> oored start

            <span class="text-muted-foreground"># Check status</span>
            oored status
            <span class="text-green-400">‚óè oored is running (pid 1234)</span
            ></code
          >
        </Terminal>
      </div>
    </div>
  </div>
</section>
