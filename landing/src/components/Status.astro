---
import Card from "./ui/Card.astro";

const scaffolded = [
  "GitHub/GitLab webhook ingestion",
  "Repository database models",
  "Service management basics",
  "Web dashboard UI shell",
];

const notStarted = [
  "Build execution (the core feature)",
  "Code signing / Keychain integration",
  "Artifact storage and downloads",
  "App Store / TestFlight publishing",
];
---

<section class="section border-t border-border" id="status">
  <div class="container">
    <div class="mx-auto mb-12 max-w-2xl text-center">
      <h2 class="mb-4 text-3xl font-bold md:text-4xl">Project Status</h2>
      <p class="text-muted-foreground">
        Very early development â€” I'm still evaluating architecture approaches.
      </p>
      <p class="mt-2 text-sm text-yellow-400">
        The "scaffolded" items are basic plumbing. The hard parts haven't started.
      </p>
    </div>

    <div class="mx-auto grid max-w-4xl gap-6 md:grid-cols-2">
      <Card>
        <div class="mb-4 flex items-center gap-2">
          <span
            class="flex h-6 w-6 items-center justify-center rounded-full bg-yellow-500/20"
          >
            <svg
              class="h-4 w-4 text-yellow-400"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z"></path>
            </svg>
          </span>
          <h3 class="text-lg font-semibold">Scaffolded</h3>
        </div>
        <ul class="space-y-2">
          {
            scaffolded.map((item) => (
              <li class="flex items-start gap-2 text-sm text-muted-foreground">
                <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-yellow-400" />
                {item}
              </li>
            ))
          }
        </ul>
      </Card>

      <Card>
        <div class="mb-4 flex items-center gap-2">
          <span
            class="flex h-6 w-6 items-center justify-center rounded-full bg-red-500/20"
          >
            <svg
              class="h-4 w-4 text-red-400"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18 18 6M6 6l12 12"></path>
            </svg>
          </span>
          <h3 class="text-lg font-semibold">Not Started</h3>
        </div>
        <ul class="space-y-2">
          {
            notStarted.map((item) => (
              <li class="flex items-start gap-2 text-sm text-muted-foreground">
                <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-red-400" />
                {item}
              </li>
            ))
          }
        </ul>
      </Card>
    </div>

    <div class="mt-8 text-center">
      <a
        href="https://github.com/devaryakjha/oore.build/issues"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground"
      >
        See the roadmap on GitHub
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
