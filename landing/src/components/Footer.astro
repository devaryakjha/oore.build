---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border py-12">
  <div class="container">
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Logo / Name -->
      <div class="flex items-center gap-3">
        <svg
          class="h-6 w-6"
          viewBox="0 0 32 32"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <defs>
            <clipPath id="footer-left">
              <rect x="0" y="0" width="15" height="32"></rect>
            </clipPath>
            <clipPath id="footer-right">
              <rect x="17" y="0" width="15" height="32"></rect>
            </clipPath>
          </defs>
          <rect
            x="2"
            y="2"
            width="28"
            height="28"
            rx="6"
            fill="currentColor"
            class="text-primary"
            clip-path="url(#footer-left)"></rect>
          <rect
            x="2"
            y="2"
            width="28"
            height="28"
            rx="6"
            fill="currentColor"
            class="text-primary"
            clip-path="url(#footer-right)"></rect>
          <circle
            cx="16"
            cy="16"
            r="7"
            fill="currentColor"
            class="text-background"></circle>
        </svg>
        <span class="text-xl font-bold">oore</span>
        <span
          class="rounded border border-border px-2 py-0.5 text-xs text-muted-foreground"
        >
          v0.1.0
        </span>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap justify-center gap-6 text-sm">
        <a
          href="https://github.com/devaryakjha/oore.build"
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          GitHub
        </a>
        <a
          href="https://docs.oore.build"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          Documentation
        </a>
        <a
          href="https://github.com/devaryakjha/oore.build/blob/main/LICENSE"
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          MIT License
        </a>
      </nav>

      <!-- Author -->
      <p class="text-sm text-muted-foreground">
        Built by{" "}
        <a
          href="https://github.com/devaryakjha"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground hover:underline"
        >
          Arya Jha
        </a>
      </p>
    </div>

    <div class="mt-8 text-center text-xs text-muted-foreground">
      &copy; {currentYear} Oore. Open source under MIT License.
    </div>
  </div>
</footer>
